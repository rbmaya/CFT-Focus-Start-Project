<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="fontFamily">@font/opensans_regular</item>
    </style>

    <style name="BoldText">
        <item name="fontFamily">@font/opensans_bold</item>
    </style>

    <style name="NormalText">
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NormalText.Bold">
        <item name="fontFamily">@font/opensans_bold</item>
    </style>

    <style name="NormalText.Italic">
        <item name="fontFamily">@font/opensans_italic</item>
    </style>

    <style name="BigText" parent="NormalText">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="BigText.Bold">
        <item name="fontFamily">@font/opensans_bold</item>
    </style>

    <style name="TextFieldStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/opensans_regular</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="cornerFamily">cut</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="cornerRadius">20dp</item>
    </style>

</resources>